@model List<Category>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    @foreach (var category in Model)
    {
        if (category.News != null && category.News.Any())
        {
            <div class="row mb-5">
                <div class="col-md-12">
                    <h3 class="section-title">
                        @category.Name
                        <small class="text-muted">(@category.News.Count() haber)</small>
                    </h3>
                </div>

                @foreach (var news in category.News.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="news-card">
                            @if (!string.IsNullOrEmpty(news.ImagePath))
                            {
                                <div class="news-image" style="background-image: url('@news.ImagePath');"></div>
                            }
                            <div class="news-content">
                                <h5 class="news-title">@news.Title</h5>
                                <p class="news-excerpt">
                                    @(news.Content?.Length > 100 ? news.Content.Substring(0, 100) + "..." : news.Content)
                                </p>
                                <p class="news-meta">
                                    <small>
                                        @news.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                        <span class="float-end">
                                            <i class="bi bi-eye"></i> @news.ViewCount
                                        </span>
                                    </small>
                                </p>
                                <a asp-controller="Home" asp-action="NewsDetail" asp-route-id="@news.Id" class="btn btn-gradient btn-sm">Devamını Oku</a>
                            </div>
                        </div>
                    </div>
                }

                @if (category.News.Count() > 3)
                {
                    <div class="col-12 text-center mt-4">
                        <a asp-controller="Home" asp-action="CategoryNews" asp-route-categoryId="@category.Id" class="btn btn-outline-gradient rounded-pill">
                            Daha Fazla Haber (@(category.News.Count() - 3))
                        </a>
                    </div>
                }
            </div>
        }
    }
</div>

<style>
    /* General Styling */
    body {
        background-color: #1e1e2f;
        color: #dcdce6;
        font-family: 'Roboto', sans-serif;
    }

    .section-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: #5a91ff;
        margin-bottom: 1.5rem;
        border-bottom: 2px solid #5a91ff;
        padding-bottom: 0.5rem;
    }

    /* News Card */
    .news-card {
        background-color: #2c2c3b;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 6px 20px rgba(0, 0, 0, 0.4);
        }

    .news-image {
        height: 200px;
        background-size: cover;
        background-position: center;
    }

    .news-content {
        padding: 20px;
    }

    .news-title {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 10px;
        color: #dcdce6;
    }

    .news-excerpt {
        font-size: 0.95rem;
        color: #aaa;
        margin-bottom: 15px;
    }

    .news-meta small {
        font-size: 0.85rem;
        color: #888;
    }

    /* Buttons */
    .btn-gradient {
        background: linear-gradient(45deg, #715aff, #5a91ff);
        color: #fff;
        border: none;
        padding: 10px 15px;
        font-weight: bold;
        border-radius: 20px;
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #5a91ff, #715aff);
            transform: translateY(-3px);
        }

    .btn-outline-gradient {
        background: none;
        color: #5a91ff;
        border: 2px solid #5a91ff;
        padding: 8px 20px;
        font-weight: bold;
        transition: color 0.3s, border-color 0.3s;
    }

        .btn-outline-gradient:hover {
            background: #5a91ff;
            color: #fff;
        }

    


    /* Responsive styles */
    @@media (max-width: 768px) {
        .card-img-top {
            height: 180px;
        }

        .card-title {
            font-size: 1rem;
        }

        .card-text {
            font-size: 0.85rem;
        }
    }
</style>
