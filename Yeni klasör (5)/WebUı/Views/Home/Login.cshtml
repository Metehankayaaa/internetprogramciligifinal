@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model LoginViewModel

<div class="d-flex justify-content-center align-items-center vh-100 bg-dark">
    <div class="login-form-container">
        <h2 class="text-center mb-4 text-white">Giriş Yap</h2>
        <form asp-action="Login" method="post">
            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label text-light">Email</label>
                <input asp-for="Email" class="form-control" placeholder="example@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Password" class="form-label text-light">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Şifrenizi girin" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mb-4 d-flex align-items-center">
                <input asp-for="RememberMe" class="form-check-input" id="rememberMe" />
                <label for="rememberMe" class="form-check-label text-light ms-2">Beni Hatırla</label>
            </div>
            <button type="submit" class="btn btn-block btn-gradient">Giriş Yap</button>
            <div class="text-center mt-3">
                <a href="@Url.Action("Register", "Home")" class="btn-link text-light">Kayıt Ol</a>
                <span class="mx-2 text-light">|</span>
                <a href="@Url.Action("ForgotPassword", "Home")" class="btn-link text-light">Şifremi Unuttum</a>
            </div>
        </form>
    </div>
</div>

<style>
    /* Genel Stil */
    .bg-dark {
        background-color: #1e1e2f;
    }

    .login-form-container {
        background: #2c2c3b;
        padding: 40px;
        border-radius: 12px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.3);
    }

    .form-label {
        font-size: 0.9rem;
        font-weight: 500;
    }

    .form-control {
        background: #38384a;
        color: #fff;
        border: none;
        border-radius: 8px;
        box-shadow: inset 0px 2px 4px rgba(0, 0, 0, 0.2);
        padding: 10px 12px;
    }

        .form-control:focus {
            background: #45455a;
            border: 1px solid #715aff;
            outline: none;
        }

    .form-check-input {
        border-radius: 4px;
        background: #38384a;
        border: 1px solid #555;
    }

    .btn {
        display: inline-block;
        border-radius: 8px;
        font-weight: 600;
        text-align: center;
        padding: 12px 15px;
        width: 100%;
        color: #fff;
        transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn-gradient {
        background: linear-gradient(45deg, #715aff, #5a91ff);
        border: none;
    }

        .btn-gradient:hover {
            background: linear-gradient(45deg, #5a91ff, #715aff);
            transform: translateY(-2px);
        }

    .btn-link {
        font-size: 0.9rem;
        text-decoration: none;
    }

        .btn-link:hover {
            text-decoration: underline;
            color: #715aff;
        }

    .text-light {
        color: #dcdce6;
    }

    .vh-100 {
        height: 100vh;
    }

    .ms-2 {
        margin-left: 0.5rem;
    }

    .text-danger {
        font-size: 0.8rem;
    }

    /* Hover efektlerini vurgulama */
    a:hover {
        color: #5a91ff;
    }
</style>
